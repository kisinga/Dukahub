# Backend Environment Configuration
# Single source of truth for all environment variables (local, Docker, production)
# Copy this to .env.backend and update the values
# Docker-specific overrides are handled in docker-compose.yml

# Application Environment
APP_ENV=dev
PORT=3000

# Database Configuration
DB_SYNCHRONIZE=true
DB_NAME=dukahub
DB_SCHEMA=public
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=dukahub
DB_PASSWORD=password

# PostgreSQL-specific (for postgres_db container)
POSTGRES_DB=dukahub
POSTGRES_USER=dukahub
POSTGRES_PASSWORD=password

# Authentication
SUPERADMIN_USERNAME=admin
SUPERADMIN_PASSWORD=admin
COOKIE_SECRET=your-secret-key-here-change-in-production

# Asset Configuration
ASSET_URL_PREFIX=https://www.my-shop.com/assets/
