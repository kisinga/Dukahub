{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80,
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/migrations/**",
    "src/index.ts",
    "src/index-worker.ts",
    "src/test-suite.ts",
    "src/test-mocks.ts"
  ],
  "reporter": ["text", "text-summary", "html", "lcov"],
  "report-dir": "coverage"
}
