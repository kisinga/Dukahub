# ========================================
# Dukahub Environment Configuration
# ========================================
#
# SETUP:
# 1. Copy this file: cp env.example .env
# 2. Update all <CHANGE_ME> values
# 3. Generate secrets using commands at bottom
#
# ========================================

# ----------------------------------------
# Node Environment
# ----------------------------------------
NODE_ENV=development
PORT=3000

# ----------------------------------------
# Database (PostgreSQL)
# ----------------------------------------
DB_NAME=vendure
DB_USERNAME=vendure
DB_PASSWORD=<CHANGE_ME_strong_password>
DB_SCHEMA=public

# Connection (environment-specific):
# Local dev (backend on host): localhost:5433
# Docker/Production: postgres_db:5432
DB_HOST=localhost
DB_PORT=5433

# ----------------------------------------
# Security & Authentication
# ----------------------------------------
# Initial superadmin account
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=<CHANGE_ME_strong_password>

# Session cookie encryption (32+ chars required)
COOKIE_SECRET=<CHANGE_ME_random_32_chars>

# Secure cookies (true for HTTPS/prod, false for local)
COOKIE_SECURE=false

# ----------------------------------------
# Frontend & CORS
# ----------------------------------------
# Allowed origins (comma-separated)
FRONTEND_URL=http://localhost:4200

# ----------------------------------------
# Optional
# ----------------------------------------
# CDN prefix for assets (empty = local)
ASSET_URL_PREFIX=

# Populate sample data on startup (first run only!)
RUN_POPULATE=false

# ----------------------------------------
# Generate Secure Values:
# ----------------------------------------
# COOKIE_SECRET:
#   openssl rand -base64 32
#
# Passwords:
#   openssl rand -base64 24 | tr -d "=+/" | cut -c1-20

