# =====================================
# Dukahub Environment Configuration
# =====================================
# 
# Copy this file to .env and modify the values for your deployment.
# All variables follow consistent naming patterns.

# ========================================
# Database Configuration
# ========================================
DB_NAME=vendure
DB_USER=vendure
DB_PASSWORD=your_secure_password_here
DB_SCHEMA=public

# Database port (exposed to host)
POSTGRES_PORT=5432

# ========================================
# Redis Configuration
# ========================================
# Redis port (exposed to host)
REDIS_PORT=6379

# ========================================
# Backend Configuration
# ========================================
# Backend port (exposed to host)
BACKEND_PORT=3000

# Admin credentials
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=your_secure_admin_password

# ========================================
# Frontend Configuration
# ========================================
# Frontend port (exposed to host)
FRONTEND_PORT=4200

# ========================================
# Application Configuration
# ========================================
NODE_ENV=production
LOG_LEVEL=info

# ========================================
# Security Configuration
# ========================================
# Generate with: openssl rand -base64 32
COOKIE_SECRET=your-32-character-secret-key-change-me
COOKIE_SECURE=false

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGIN=http://localhost:4200
FRONTEND_URL=http://localhost:4200

# ========================================
# Asset Storage Configuration
# ========================================
ASSET_STORAGE_STRATEGY=LocalAssetStorageStrategy
ASSET_UPLOAD_DIR=/app/static/assets
ASSET_URL_PREFIX=

# ========================================
# Email Configuration (Optional)
# ========================================
MAIL_TRANSPORT=SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# ========================================
# Development Configuration
# ========================================
# Set to "true" to populate the database with sample data on startup
RUN_POPULATE=false

# ========================================
# Data Storage Paths
# ========================================
POSTGRES_DATA_PATH=./data/postgres
REDIS_DATA_PATH=./data/redis
BACKEND_ASSETS_PATH=./data/assets
BACKEND_UPLOADS_PATH=./data/uploads
